%div.card.mb-sm-3.mb-md-2.history_item
  %div.card-header{ data: { toggle: 'collapse', target: "#historyItem#{history_item.id}"}, aria: { controls: "historyItem#{history_item.id}", expanded: 'false', label: 'Open info' } }
    %span.mr-auto
      = t('rounds.history.header', id: history_item.id)
    %span.dropdown-toggle
  %div.card-body{id: "historyItem#{history_item.id}"}
    %div.row
      %div.col-sm-12.col-md-2
        %img{src: history_item.image.thumb.url}
      %div.col-sm-12.col-md-10
        %h4.card-title
          = history_item.name
        %p.card-text
          = history_item.description.html_safe
  %div.card-footer.bottom-panel
    %span.card-title
      = t('rounds.history.winner', id: '')
    %span.winner
      = history_item.win_ticket